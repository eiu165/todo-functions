{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "API": {
      "matchCondition": {
        "route": "/api/{*restOfPath}"
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/{restOfPath}"
    },
    "root": {
      "matchCondition": {
        "route": "/"
      },
      "backendUri": "https://%STORAGE_HOSTNAME%/www/index.html"
    }, 
    "path": {
      "matchCondition": {
        "route": "/{*path}"
      },
      "backendUri": "https://%STORAGE_HOSTNAME%/www/{path}"
    }
  }
}